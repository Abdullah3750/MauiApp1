<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             Title="Home">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="🏋️‍♂️ FitLife App"
               FontSize="32"
               HorizontalOptions="Center" />
        
        <Label Text="Welcome! Choose a section to begin:"
               FontSize="18"
               HorizontalOptions="Center" />

        <Button Text="Workout Plans" Clicked="OnWorkoutClicked" />
        <Button Text="Nutrition" Clicked="OnNutritionClicked" />
        <Button Text="Progress Tracker" Clicked="OnProgressClicked" />
        <Button Text="Settings" Clicked="OnSettingsClicked" />
    </VerticalStackLayout>
</ContentPage>